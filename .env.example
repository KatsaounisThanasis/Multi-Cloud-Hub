# Environment Configuration
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Security Configuration
# API Authentication (set to true in production)
API_AUTH_ENABLED=false
API_KEY=your_secure_api_key_here

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60

# CORS Configuration
# For development: CORS_ORIGINS=*
# For production: CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Trusted Hosts (for production)
# TRUSTED_HOSTS=yourdomain.com,api.yourdomain.com

# Azure Configuration
AZURE_ENABLED=true
AZURE_TENANT_ID=your_tenant_id_here
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here
AZURE_SUBSCRIPTION_ID=your_subscription_id_here
AZURE_DEFAULT_REGION=eastus

# Terraform Configuration
TERRAFORM_ENABLED=true
TERRAFORM_DEFAULT_REGION=us-east-1

# Terraform State Backend Configuration
# AWS S3 Backend
TERRAFORM_STATE_S3_BUCKET=my-terraform-state-bucket
TERRAFORM_STATE_DYNAMODB_TABLE=terraform-state-lock

# Azure Storage Backend
TERRAFORM_STATE_STORAGE_ACCOUNT=myterraformstate
TERRAFORM_STATE_CONTAINER=terraform-state

# GCP GCS Backend
TERRAFORM_STATE_GCS_BUCKET=my-terraform-state-bucket

# AWS Configuration (for Terraform provider)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# GCP Configuration (for Terraform provider)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_PROJECT_ID=your_gcp_project_id
GOOGLE_REGION=us-central1

# API Configuration
CORS_ORIGINS=*
API_PORT=8000
API_HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://apiuser:changeme@localhost:5432/multicloud
# For SQLite (development only): DATABASE_URL=sqlite:///./cloud_manager.db

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Database Password (used in docker-compose)
DB_PASSWORD=changeme

# Security (Production)
# For production, use Azure Key Vault or similar secret management
USE_KEY_VAULT=false
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
API_KEY=your_secure_api_key_here
